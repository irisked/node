{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-shadowed-variable": [
            false
        ],
        "curly": [
            false, 
            "as-needed"
        ],
        "max-classes-per-file": [
            true
        ],
        "ordered-imports": [
            false
        ],
        "interface-name": [
            false
        ],
        "object-literal-sort-keys": false,
        "max-line-length": [true, 150],
        "member-access": [
            false
        ],
        "array-type": [
            false
        ],
        "member-ordering": [
            false
        ],
        "no-string-literal": [false],
        "no-unused-expression": [
            false
        ],
        "no-console": [false],
        "trailing-comma": false
    },
    "rulesDirectory": []
}